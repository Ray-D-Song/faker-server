model Api {
  id              Int      @id @default(autoincrement())
  name            String   @map("name")
  method          String   @map("method")
  path            String   @unique @map("path")
  deleted         Int      @default(0) @map("deleted")

  description     String?  @map("description")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @default(now()) @map("updated_at")
  deletedAt       DateTime? @map("deleted_at")

  reqParams       String?  @map("req_params")
  // reqBody         String?  @map("req_body")
  reqHeaders      String?  @map("req_headers")
  // reqCookies      String?  @map("req_cookies")
  // reqAuth         String?  @map("req_auth")

  resHeaders      String?  @map("res_headers")
  resResponseType String   @default("application/json") @map("res_response_type")
  resBody         String?  @map("res_body")
